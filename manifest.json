{
    "manifest_version": 2,
    "name": "BiasBuddy",
    "options_page": "options.html",
    "description": "Bias detection extension",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "notifications"],

    "background": {
        "scripts": ["background.js", "jquery-3.3.1.min.js"],
        "persistent": false
      },

    "browser_action": {
        "default_icon": "pluginImages/icon.png",
        "default_popup": "popup.html",
        "default_title": "BiasBuddy"
    }
}